{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"lib": ["es6", "dom", "es2017"],
		"target": "es6",
		"strict": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"removeComments": true,
		"sourceMap": false,
		"declarationDir": ".",
		"outDir": "src"
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules/*"]
}